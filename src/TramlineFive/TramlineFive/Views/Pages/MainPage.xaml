<Page
    x:Class="TramlineFive.Views.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TramlineFive"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:su="using:TramlineFive.Common.Converters"
    mc:Ignorable="d" >

    <Page.Resources>
        <su:TimingConverter x:Key="TimingConverter" />
        <su:StopCodeConverter x:Key="StopCodeConverter" />
        <su:StringFormatConverter x:Key="StringFormat" />

        <MenuFlyout x:Name="LineFlyout">
            <MenuFlyoutItem Text="Добави в любими" Click="MenuFlyoutItem_Click" />
        </MenuFlyout>
    </Page.Resources>

    <Page.TopAppBar>
        <CommandBar Background="{ThemeResource AccentColour}" Foreground="White" >
            <CommandBar.Content>
                <StackPanel Orientation="Horizontal">
                    <AppBarButton Click="OnHamburgerClick" Foreground="White" HorizontalAlignment="Left" Margin="-8,0,0,0">
                        <AppBarButton.Icon>
                            <FontIcon FontSize="25" Glyph="&#xE700;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <TextBlock Text="{Binding VersionViewModel.DisplayName}" FontWeight="Bold" Foreground="White" Margin="0,14,0,0" />
                </StackPanel>
            </CommandBar.Content>

            <AppBarButton Name="btnSumc" Icon="Globe" Label="m.sumc.bg" Foreground="White" Click="btnSumc_Click" />
        </CommandBar>
    </Page.TopAppBar>

    <SplitView Name="svMain" 
               DisplayMode="Overlay" 
               IsPaneOpen="False" 
               CompactPaneLength="50" 
               OpenPaneLength="200" 
               PaneBackground="{ThemeResource AccentColour}">

        <SplitView.Pane>
            <StackPanel>
                <Button Name="btnSchedules" Click="btnSchedules_Click" Style="{StaticResource HamburgerMenuButton}">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="&#xE8A1;" Style="{StaticResource BarIcon}" />
                        <TextBlock Text="Разписания" Style="{StaticResource BarText}" />
                    </StackPanel>
                </Button>

                <Button Name="btnSettings" Click="btnSettings_Click" Style="{StaticResource HamburgerMenuButton}">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="&#xE713;" Style="{StaticResource BarIcon}" />
                        <TextBlock Text="Настройки" Style="{StaticResource BarText}"/>
                    </StackPanel>
                </Button>

                <Button Name="btnAbout" Click="btnAbout_Click" Style="{StaticResource HamburgerMenuButton}">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="&#xE168;" Style="{StaticResource BarIcon}" />
                        <TextBlock Text="Информация" Style="{StaticResource BarText}"/>
                    </StackPanel>
                </Button>

            </StackPanel>
        </SplitView.Pane>

        <SplitView.Content>
            <Pivot Name="pvMain" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" SelectionChanged="pvMain_SelectionChanged">
                <PivotItem Header="Виртуални табла">
                    <Grid Padding="0,0,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="2*" />
                        </Grid.RowDefinitions>
                        
                        <ProgressRing Grid.Row="0" Grid.RowSpan="2" Name="prVirtualTables" Style="{StaticResource Spinner}" Visibility="Collapsed" />
                        
                        <StackPanel Grid.Row="0">
                            <TextBlock Text="Код на спирка:" HorizontalAlignment="Center" />
                            <TextBox Name="txtStopID" HorizontalAlignment="Center" Margin="0,10,0,10" KeyDown="txtStopID_KeyDown" MaxWidth="64" />
                            <Button Name="btnStop" Content="Търсене" Click="btnStop_Click" HorizontalAlignment="Center" />

                            <TextBlock Text="{Binding ArrivalViewModel.StopTitle.Source}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" TextWrapping="Wrap" Margin="0,15,0,0" />
                        </StackPanel>
                        
                        <Grid Grid.Row="1">
                            <ListView ItemsSource="{Binding ArrivalViewModel.Arrivals}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Holding="ListViewItem_Holding" FlyoutBase.AttachedFlyout="{StaticResource LineFlyout}" Height="70" Margin="0,10,0,0" >
                                            <TextBlock FontWeight="Bold">
                                                    <Run Text="{Binding Type}" />
                                                    <Run Text="{Binding VehicleNumber}" />
                                            </TextBlock>

                                            <TextBlock Text="{Binding Direction}" />
                                            <TextBlock Text="{Binding Timings, Converter={StaticResource TimingConverter}}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Grid>
                </PivotItem>

                <PivotItem Header="Любими">
                    <Grid Padding="0,10,0,10">
                        <ProgressRing Name="prFavourites" Style="{StaticResource Spinner}" Visibility="Visible" IsActive="True" />

                        <ListView Name="lvFavourites" ItemsSource="{Binding FavouritesViewModel.Favourites}" ItemClick="lvFavourites_ItemClick" IsItemClickEnabled="True" SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" Margin="0,0,5,0" />
                                        <TextBlock Text="(" />
                                        <TextBlock Text="{Binding Code, Converter={StaticResource StopCodeConverter}}" />
                                        <TextBlock Text=")" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </PivotItem>
            </Pivot>
        </SplitView.Content>
    </SplitView>
</Page>
