<Page
    x:Class="TramlineFive.Views.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TramlineFive"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:su="using:TramlineFive.Common.Converters"
    mc:Ignorable="d" >

    <Page.Resources>
        <su:TimingConverter x:Key="TimingConverter" />
        <su:StopCodeConverter x:Key="StopCodeConverter" />
        <su:StringFormatConverter x:Key="StringFormat" />

        <MenuFlyout x:Name="LineFlyout">
            <MenuFlyoutItem Text="Добави в любими" Click="MenuFlyoutItem_Click" />
        </MenuFlyout>
    </Page.Resources>

    <Page.TopAppBar>
        <CommandBar Background="{ThemeResource AccentColour}" Foreground="White" >
            <CommandBar.Content>
                <StackPanel Orientation="Horizontal">
                    <AppBarButton Click="OnHamburgerClick" Foreground="White" HorizontalAlignment="Left" Margin="-8,0,0,0">
                        <AppBarButton.Icon>
                            <FontIcon FontSize="25" Glyph="&#xE700;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <TextBlock Text="{Binding Version.DisplayName}" FontWeight="Bold" Foreground="White" Margin="0,14,0,0" />
                </StackPanel>
            </CommandBar.Content>

            <AppBarButton Name="btnSumc" Icon="Globe" Label="m.sumc.bg" Foreground="White" Click="btnSumc_Click" />
        </CommandBar>
    </Page.TopAppBar>

    <SplitView Name="svMain" 
               DisplayMode="Overlay" 
               IsPaneOpen="False" 
               CompactPaneLength="50" 
               OpenPaneLength="200" 
               PaneBackground="{ThemeResource AccentColour}">

        <SplitView.Pane>
            <StackPanel>
                <Button Name="btnSchedules" Click="btnSchedules_Click" Style="{StaticResource HamburgerMenuButton}">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="&#xE8A1;" Style="{StaticResource BarIcon}" />
                        <TextBlock Text="Разписания" Style="{StaticResource BarText}" />
                    </StackPanel>
                </Button>

                <Button Name="btnFeedback" Click="btnFeedback_Click" Style="{StaticResource HamburgerMenuButton}">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="&#xE8CA;" Style="{StaticResource BarIcon}" />
                        <TextBlock Text="Обратна връзка" Style="{StaticResource BarText}"/>
                    </StackPanel>
                </Button>

                <Button Name="btnSettings" Click="btnSettings_Click" Style="{StaticResource HamburgerMenuButton}">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="&#xE713;" Style="{StaticResource BarIcon}" />
                        <TextBlock Text="Настройки" Style="{StaticResource BarText}"/>
                    </StackPanel>
                </Button>

                <Button Name="btnAbout" Click="btnAbout_Click" Style="{StaticResource HamburgerMenuButton}">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="&#xE168;" Style="{StaticResource BarIcon}" />
                        <TextBlock Text="Информация" Style="{StaticResource BarText}"/>
                    </StackPanel>
                </Button>

            </StackPanel>
        </SplitView.Pane>


        <SplitView.Content>
            <Pivot Name="pvMain" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" SelectionChanged="pvMain_SelectionChanged">
                <PivotItem Header="Виртуални табла">
                    <StackPanel>
                        <TextBlock Text="Код на спирка:" HorizontalAlignment="Center" />
                        <TextBox Name="txtStopID" HorizontalAlignment="Center" Margin="0,10,0,10" KeyDown="txtStopID_KeyDown" MaxWidth="64" />
                        <Button Name="btnStop" Content="Търсене" Click="btnStop_Click" HorizontalAlignment="Center" />

                        <ProgressRing Name="prVirtualTables"
                                      Style="{StaticResource Spinner}"
                                      Visibility="Collapsed"
                                      Margin="0,20,0,0"/>

                        <TextBlock Name="txtStopTitle" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" TextWrapping="Wrap" Margin="0,15,0,0"/>

                        <ListView ItemsSource="{Binding Arrivals}" Margin="0,10,0,0" >
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Holding="ListViewItem_Holding" FlyoutBase.AttachedFlyout="{StaticResource LineFlyout}" Height="50" Margin="0,10,0,0" >
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding VehicleNumber}" FontWeight="Bold" Margin="0,0,5,0"/>
                                            <TextBlock Text="-" />
                                            <TextBlock Text="{Binding Direction}"  Margin="5,0,0,0"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Timings, Converter={StaticResource TimingConverter}}" />
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </PivotItem>

                <PivotItem Header="Любими">
                    <StackPanel>
                        <ProgressRing Name="prFavourites" 
                                      Style="{StaticResource Spinner}"
                                      Visibility="Visible"
                                      IsActive="True"
                                      Margin="0,20,0,0"/>

                        <ListView Name="lvFavourites" ItemsSource="{Binding Favourites}" ItemClick="lvFavourites_ItemClick" IsItemClickEnabled="True" SelectionMode="None" Margin="0,10,0,0">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" Margin="0,0,5,0" />
                                        <TextBlock Text="(" />
                                        <TextBlock Text="{Binding Code, Converter={StaticResource StopCodeConverter}}" />
                                        <TextBlock Text=")" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </PivotItem>
            </Pivot>
        </SplitView.Content>
    </SplitView>
</Page>
